<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="radio_checkBoxStyle">
        <item name="colorAccent">#1B5E20</item>
        <item name="android:textColorSecondary">#000000</item>
    </style>

    <style name="CodeForQuestions">
        <item name="android:textSize">@dimen/textSize_of_questions</item>
        <item name="android:layout_marginLeft">@dimen/question_layout_marginLeft</item>
        <item name="android:layout_marginRight">@dimen/question_layout_marginRight</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

    </style>

    <style name="CodeForOptions">
        <item name="android:textSize">@dimen/textSize_of_options</item>
        <item name="android:layout_marginLeft">@dimen/options_layout_marginLeft</item>

    </style>

</resources>
